pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                git url: 'https://github.com/TomerBu/cicd.git', branch: 'main'
                sh '''
                  cd python_demo
                  python3 -m venv venv
                  . venv/bin/activate
                   if [ -f requirements.txt ]; then
                         pip install -r requirements.txt
                   fi
                '''
                echo 'Build completed'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                sh '''
                    cd python_demo
                    . venv/bin/activate
                    pytest
                    '''
                echo 'Test completed'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}

